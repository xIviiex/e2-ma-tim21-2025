<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.activity.InventoryActivity">

    <!-- Glavni sadržaj ekrana (Toolbar i ScrollView) unutar LinearLayout-a -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@+id/boss_fight_button_container"> <!-- Važno: Prikazuje se IZNAD dugmeta -->

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_inventory"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:title="Inventory &amp; Equipment"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_inventory_weapons_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weapons"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_inventory_weapons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/tv_inventory_armor_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Armor"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_inventory_armor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/tv_inventory_potions_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Potions"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_inventory_potions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Kontejner sa dugmetom, pozicioniran na dnu ekrana -->
    <FrameLayout
        android:id="@+id/boss_fight_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?attr/colorPrimary"
        android:padding="8dp"
        android:visibility="gone"
        tools:visibility="visible">

        <Button
            android:id="@+id/btn_start_boss_fight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#27AE60"
            android:text="Započni Borbu"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </FrameLayout>

</RelativeLayout>