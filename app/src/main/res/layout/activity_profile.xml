<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.activity.ProfileActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:titleTextColor="@android:color/white"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp">

            <FrameLayout
                android:id="@+id/fl_avatar_container"
                android:layout_width="165dp"
                android:layout_height="165dp"
                android:layout_marginTop="32dp">

                <ImageView
                    android:id="@+id/iv_profile_avatar"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:src="@drawable/default_avatar"
                    android:contentDescription="@string/profile_avatar" />

                <ImageView
                    android:id="@+id/iv_avatar_border"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/avatar_border_adventurer"
                    android:contentDescription="Avatar border"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="3dp"
                    android:alpha="0.65" />

            </FrameLayout>

            <LinearLayout
                android:id="@+id/ll_username_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/tv_profile_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:text="Username"/>

                <TextView
                    android:id="@+id/tv_profile_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textSize="18sp"
                    android:textColor="?attr/colorPrimary"
                    tools:text="(Adventurer)"/>

                <ImageView
                    android:id="@+id/iv_qr_code_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_qr"
                    android:layout_marginStart="8dp"
                    android:contentDescription="@string/show_qr_code"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_add_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_friend_button"
                android:layout_marginTop="8dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_profile_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="18sp"
                tools:text="Level: 1"
                app:layout_constraintTop_toBottomOf="@id/btn_add_friend"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <LinearLayout
                android:id="@+id/ll_xp_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="16dp">

                <ProgressBar
                    android:id="@+id/pb_xp_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_marginTop="4dp"
                    android:progress="0"
                    android:max="100" />

                <TextView
                    android:id="@+id/tv_xp_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textSize="12sp"
                    tools:text="0 / 200 XP"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_pp_coins_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/tv_profile_pp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    tools:text="PP: 0"/>

                <TextView
                    android:id="@+id/tv_profile_coins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:textSize="16sp"
                    tools:text="Coins: 0"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_badges_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/badges_section_title"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_badges_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_badges_message"
                android:layout_marginTop="8dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp">

                <TextView
                    android:id="@+id/tv_equipment_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Equipment"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/iv_shop_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_shopping"
                    android:contentDescription="Open Shop"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_no_equipment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_equipment_message"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_marginTop="8dp"/>

            <!-- Weapons -->
            <TextView
                android:id="@+id/tv_weapons_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weapons"
                android:layout_marginTop="8dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_weapons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="80dp"/>

            <!-- Armor -->
            <TextView
                android:id="@+id/tv_armor_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Armor"
                android:layout_marginTop="16dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_armor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="80dp"/>

            <!-- Potions -->
            <TextView
                android:id="@+id/tv_potions_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Potions"
                android:layout_marginTop="16dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_potions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="80dp"/>

            <Button
                android:id="@+id/btn_manage_equipment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Manage Equipment"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

            <Button
                android:id="@+id/btn_change_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/change_password_title"/>

        </LinearLayout>

    </ScrollView>
</LinearLayout>